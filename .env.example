# AI Voice Calling Backend - Environment Configuration

# Server Configuration
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info
NODE_ENV=development

# CORS Configuration
CORS_ORIGINS=*

# API Key Header
API_KEY_HEADER=X-API-Key

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Session Configuration
SESSION_TTL=3600
CLEANUP_INTERVAL=60000

# MCP Configuration
ENABLE_MCP=true
MCP_SERVER_NAME=voice-agent-mcp
N8N_BASE_URL=
N8N_API_KEY=

# n8n MCP Server (auto-connect for telephony tools)
N8N_MCP_URL=http://localhost:5678/mcp/sse
N8N_MCP_API_KEY=

# STT Provider - Sarvam
SARVAM_API_KEY=your_sarvam_api_key

# LLM Provider - Gemini
GEMINI_API_KEY=your_gemini_api_key
LLM_MODEL=gemini-2.0-flash

# TTS Provider Configuration
# TTS_PROVIDER: 'sarvam' (default) or 'cartesia'
TTS_PROVIDER=sarvam
TTS_VOICE_ID=anushka
TTS_LANGUAGE=en-IN
TTS_GENDER=female

# Cartesia TTS (if TTS_PROVIDER=cartesia)
CARTESIA_API_KEY=your_cartesia_api_key
# Cartesia voice IDs: a0e99841-438c-4a64-b679-ae501e7d6091 (Barbershop Man), etc.

# ============================================
# TELEPHONY CONFIGURATION (Plivo)
# ============================================

# Enable/disable telephony
ENABLE_TELEPHONY=true

# Plivo Credentials (from console.plivo.com)
PLIVO_AUTH_ID=your_plivo_auth_id
PLIVO_AUTH_TOKEN=your_plivo_auth_token

# Your Plivo phone number (E.164 format)
PLIVO_FROM_NUMBER=+1234567890

# Webhook base URL (must be publicly accessible)
# Use ngrok for development: ngrok http 3000
WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok.app

# Telephony system prompt
TELEPHONY_SYSTEM_PROMPT=You are a helpful voice assistant on a phone call. Be concise and natural. Keep responses brief.

# ============================================
# SUPABASE CONFIGURATION
# ============================================

# Supabase Project URL (from Project Settings > API)
SUPABASE_URL=https://your-project.supabase.co

# Supabase Anon Key (public, for client-side)
SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key (secret, for server-side only)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================
# PAYMENT PROVIDERS
# ============================================

# Stripe (Primary for international)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Razorpay (For India)
RAZORPAY_KEY_ID=rzp_test_...
RAZORPAY_KEY_SECRET=your_razorpay_secret

# Cashfree (For India - alternative)
CASHFREE_APP_ID=your_cashfree_app_id
CASHFREE_SECRET_KEY=your_cashfree_secret_key
CASHFREE_API_VERSION=2023-08-01
CASHFREE_ENV=TEST

# ============================================
# ADDITIONAL PROVIDER API KEYS (Optional)
# ============================================

# Google API Key (for Gemini)
GOOGLE_API_KEY=your_google_api_key

# OpenAI (optional, for GPT-4o)
OPENAI_API_KEY=sk-...

# Anthropic (optional, for Claude)
ANTHROPIC_API_KEY=sk-ant-...

# Deepgram (optional STT fallback)
DEEPGRAM_API_KEY=your_deepgram_api_key

# ElevenLabs (premium TTS)
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# ============================================
# DEMO BOOKING & N8N INTEGRATION
# ============================================

# n8n MCP Workflow URL(s) for demo booking tools
# Each workflow has its own URL, e.g.: https://n8n.vocacore.com/mcp/backendtest/goldloan
# The frontend uses this for the VoiceDemo component
VITE_MCP_WORKFLOW_URL=https://n8n.vocacore.com/mcp/demo-booking

# Google Calendar Integration (via n8n)
# These are used by n8n workflow, not directly by the app
# GOOGLE_CALENDAR_ID=your_calendar_id@group.calendar.google.com

# Email Service (via n8n - SMTP or SendGrid/Resend)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Demo booking from email address
DEMO_FROM_EMAIL=maya@vocaai.com
DEMO_FROM_NAME=Maya from VocaCore AI

# ============================================
# DOCKER / PRODUCTION
# ============================================

# Voice API port (WebSocket + HTTP)
VOICE_API_PORT=8080

# SaaS API port (REST)
SAAS_API_PORT=3001
